{
  "manifest_version": 3,
  "name": "YouTube Loop & Practice",
  "version": "0.1.0",
  "description": "YouTube 영상의 구간 반복, 재생 속도 조절, BPM 감지, 메트로놈 기능을 제공하는 Chrome Extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-QModzkdh.js"
      ],
      "matches": [
        "*://*.youtube.com/watch*",
        "*://youtu.be/*"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-play": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "재생/일시정지"
    },
    "toggle-loop": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "구간반복 토글"
    },
    "prev-segment": {
      "suggested_key": {
        "default": "Alt+Left"
      },
      "description": "이전 구간"
    },
    "next-segment": {
      "suggested_key": {
        "default": "Alt+Right"
      },
      "description": "다음 구간"
    }
  },
  "action": {
    "default_title": "YouTube Loop & Practice",
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtu.be/*"
      ],
      "resources": [
        "assets/content-C-9xbQDK.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
